.favorite-list
    height: 100%
    width: 100%
    fixed: top left
    text-align: left

    scrollable()

    &::-webkit-scrollbar-track
        margin-top: HeaderHeight

    .bookmarks
        padding-top: HeaderHeight
        -webkit-user-select: none;
        text-align: left;
        display: inline-block;
        width:100%;

    .error
        font-size: 1.5em;
        text-align: center;
        color: #727272;
        font-weight: bold;
        margin: 180px auto;

    > .spinner
        position: absolute;
        width: 100%;
        height: 100%;
        background: black center center no-repeat;
        opacity: .5;

        .loading-container
            margin: 180px auto 0px