.movie-item
    display:inline-block;
    margin: 10px
    float: left
    font-size: 0.8em

    .cover
        background-size: 134px 196px
        width: 134px
        height: 196px
        border-radius: 4px
        box-shadow: 0px 0px 10px
        cursor: pointer

        .cover-overlay
            background: rgba(45, 117, 223, .70);
            text-align: center;
            padding: 88px 0;
            width: 100%;
            height: 100%;
            border-radius: 4px;
            transition: opacity .25s ease;

            opacity: 0
            &:hover
                opacity: 1

            .actions
                margin: auto
                width: 105px

                div
                    float: left;
                    background-position: center;
                    background-repeat: no-repeat;
                    margin: 0 5px
                    width: 25px
                    height: 20px
                    transition: opacity .25s ease;

                    &.favorites
                        background-image: url(../../images/icons/add_favorites.png)
                    &.detail
                        background-image: url(../../images/icons/detail.png)
                    &.queue
                        background-image: url(../../images/icons/add_queue.png)

                    &:hover
                        opacity: 0.5


    .title
        height: 14px;
        margin: 6px 0 4px;
        color: #fff
        max-width: 134px
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap

    .year
        font-size: 0.85em
        color: #5b5b5b
        display: inline

    .seasons
        font-size: 0.85em
        color: #5b5b5b
        display: inline
        float: right

.load-more
	background-size 134px 196px
	width 134px
	height 196px
	border-radius 4px
	box-shadow 0px 0px 10px
	cursor pointer
	display inline-block
	margin 10px
	float left
	background-color:#141c25

.status-loadmore
	position: absolute;
	color: #c3c5c7;
	margin-top: 80px;
	margin-left: 10px;
	padding-left: 15px;
	padding-right: 15px;
	background-color: #173b5b;
	-webkit-box-shadow: 0px 0px 10px #000;
	padding-bottom: 10px;
	padding-top: 10px;
	border-radius: 2px;
	font-family: "Open Sans Semibold", sans-serif;