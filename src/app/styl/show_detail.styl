.shows-container-contain
    background-color #17181b
    height 100%
    width 100%
    position fixed
    scrollable()
    padding-top: 40px
    &::-webkit-scrollbar-track
        margin-top: 40px

.season-ep-bar
    width 1px
    height 100%
    position absolute
    background-color #3a3b3e
    z-index 4
    left 200px

.tv-meta-data
    height 100%
    width 100%
    position absolute

.tv-container-close
    top 55px
    right 20px
    position fixed
    float right
    width 16px
    height 16px
    background-image url('../../images/icons/Close.png')
    cursor pointer
    z-index 2
    opacity 1
    -webkit-backface-visibility hidden
    z-index 4

.tv-poster
    position fixed
    width 100%
    height 273px
    top 0
    padding-top 40px
    z-index 3
    overflow hidden
    background #17181b

.tv-poster-background 
  position absolute
  width 100%
  height 237px
  z-index 1
  background-repeat no-repeat
  background-attachment fixed
  background-position 50% 0
  -webkit-filter blur(4px)
  -webkit-background-size cover
  -moz-background-size cover
  background-size cover
  margin -1px
  display none

.tv-poster-overlay
  position absolute
  width 100%
  height 100%
  opacity .4
  background-color #000
  z-index 2

.tv-cover
  position relative
  float left
  margin-left 28px
  margin-top 22px
  width 135px
  height 197px
  -moz-box-shadow 0 0 10px rgba(0, 0, 0, .4)
  -webkit-box-shadow 0 0 10px rgba(0, 0, 0, .4)
  box-shadow 0 0 10px rgba(0, 0, 0, .4)
  z-index 3
  background-size 134px 197px
  border-radius 4px
  box-shadow 0px 0px 10px

.tv-title
  top 21px
  left 198px
  position relative
  z-index 3
  color #fff
  width 452px
  font-family 'Open Sans'
  -webkit-font-smoothing antialiased
  font-size 22px

.tv-overview
  margin-top 60px
  margin-left 198px
  z-index 3
  position relative
  color #fff
  font-family 'Open Sans Semibold'
  -webkit-font-smoothing: antialiased
  font-size 12px
  line-height 22px
  max-width 78%
  //height 110px


.tv-num-episodes
  margin-top 35px
  position relative
  z-index 3
  float left
  color #fff
  font-family: 'Open Sans Bold'
  -webkit-font-smoothing antialiased
  font-size 11px
  cursor default

.tv-genre
  margin-top 35px
  z-index 3
  position relative
  float left
  color #fff
  font-family 'Open Sans Bold'
  -webkit-font-smoothing antialiased
  font-size 11px
  cursor default

.tv-duration
  margin-top 35px
  position relative
  z-index 3
  margin-left 198px
  float left
  color #fff
  width auto
  height auto
  font-family 'Open Sans Bold'
  -webkit-font-smoothing antialiased
  font-size 11px
  cursor default
  z-index 3

.tv-dot
  margin-top 39.5px
  position relative
  z-index 3
  margin-left 15px
  margin-right 15px
  position relative
  float left
  width 3px
  height 3px
  -moz-border-radius 2px
  -webkit-border-radius 2px
  border-radius 2px
  -moz-background-clip padding
  -webkit-background-clip padding-box
  background-clip padding-box
  background-color #dbdbdd
  cursor default

.tv-rating-star
    z-index 2
    margin-right 3px
    margin-top 35px
    position relative
    float left
    width 11px
    height 11px
    opacity 1
    background-repeat no-repeat
    -webkit-backface-visibility hidden
    &.null
      background-image url('../../images/icons/StarGray.png')
    &.half
      background-image url('../../images/icons/StarHalf.png')
    &.full
      background-image url('../../images/icons/star.png')


.episode-base
    margin-top 233px

#tabs_season
    position absolute
    list-style none
    margin-top 10px
    margin-left 35px
    color white 

    a
        text-decoration none
        color #707070
        font-size 15px
        font-weight normal
        margin 10px 0px

    li
        padding 5px 30px 5px 15px
        font-family sans-serif
        font-size 15px
        margin-left -10px
        border-left 1px solid #17181B
        margin 1px

        a
            color #fff
            cursor pointer

    li:nth-child(odd)
        background-color #1F2025

    li.active
        background-color #1b2d4c

#tabs_episode_base
    padding 0px
    position relative
    z-index 2
    height 100%
    margin 0 150px
    color #fff

    a
        text-decoration none
        color #fff
        font-size 15px
        font-weight normal
        font-family 'Open Sans Bold'
        -webkit-font-smoothing antialiased
        margin 10px 0px
    ul
        position absolute
        margin 0
        padding 10px 20px
        list-style none
        min-width 29%
        background #17181b
        
        li
            padding 0
            font-family 'Open Sans Bold'
            -webkit-font-smoothing antialiased
            min-width 360px
            margin 1px

        li:nth-child(odd)
            background-color #1F2025

        li.active
            background-color #1b2d4c

    .current
        display block

.tabs-episode
    display none

#tabs_season .active
    position relative

    &:after
        content ""
        position absolute
        top 0px
        right -12px
        width 0
        height 0
        border-color transparent transparent transparent #1b2d4c
        border-style solid
        border-width 13px 8px 13px 4px
    
    span 
        right 11px
#tabs_episode_base .active
    position relative

    &:after
        content ""
        position absolute
        top 0px
        right -12px
        width 0
        height 0
        border-color transparent transparent transparent #1b2d4c
        border-style solid
        border-width 17px 6px 18px 6px
    
    span 
        right 11px
.display-base-title
    width 100%
    color #FFF
    height 30px
    font-family 'Open Sans Bold'
    -webkit-font-smoothing antialiased
    font-size 23px
    line-height 12px
    padding 20px 0
    
.season-episode-container
    margin-top 19px

.EpisodeData span
    padding 9px 20px
    font-weight 800

    &:first-child
        width 40px
        display inline-block
        border-right 1px solid #17181B
        text-align right
    
    &:last-child
        color #8d9296
        font-weight 600

.episode-list-text
    display inline-block
    margin 10px 30px 0 40px

.watched-false
    position absolute
    right 30px
    opacity 0.1
    padding 10px 0
    
    img
        width: 20px;

.watched-true
    position absolute
    right 30px
    opacity 1
    padding 10px 0

    img
        width 20px

.episode-info
    background-color #1f2025
    float right
    width 30%
    color #FFF
    padding 30px
    height 100%

    p
        font-size 22px
        font-family 'Open Sans Bold'
        -webkit-font-smoothing antialiased
        margin -22px 0 10px

@media all and (min-width: 1300px)
    .episode-info
        width 40%

@media all and (min-width: 700px) and (max-width: 1100px)
    .episode-info
        width 36%
