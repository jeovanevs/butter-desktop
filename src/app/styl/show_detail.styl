.shows-container-contain
    background-color #17181b
    height 100%
    width 100%
    position fixed
    scrollable()
    padding-top: HeaderHeight
    &::-webkit-scrollbar-track
        margin-top: HeaderHeight

.season-ep-bar
    width 1px
    height 100%
    position absolute
    background-color #3a3b3e
    z-index 4
    left 200px

.tv-meta-data
    height 100%
    width 100%
    position absolute

.tv-container-close
    top 80px
    right 20px
    position fixed
    float right
    width 16px
    height 16px
    background-image url('../../images/icons/Close.png')
    cursor pointer
    z-index 2
    opacity 1
    -webkit-backface-visibility hidden
    z-index 4

.tv-poster
  position fixed
  width 100%
  height 233px
  z-index 3
  overflow hidden
  background #17181b

.tv-poster-background 
  position: absolute
  width: 100%
  height: 237px
  z-index: 1
  background-repeat: no-repeat
  background-attachment: fixed
  background-position: 50% 0
  -webkit-filter: blur(4px)
  -webkit-background-size: cover
  -moz-background-size: cover
  background-size: cover
  margin: -1px

.tv-poster-overlay
  position absolute
  width 100%
  height 100%
  opacity .4
  background-color #000
  z-index 2

.tv-cover
  position relative
  float left
  margin-left 28px
  margin-top 22px
  width 135px
  height 197px
  -moz-box-shadow 0 0 10px rgba(0, 0, 0, .4)
  -webkit-box-shadow 0 0 10px rgba(0, 0, 0, .4)
  box-shadow 0 0 10px rgba(0, 0, 0, .4)
  z-index 3
  background-size 134px 197px
  border-radius 4px
  box-shadow 0px 0px 10px

.tv-title
  top 21px
  left 198px
  position relative
  z-index 3
  color #fff
  width 452px
  font-family: 'Open Sans'
  -webkit-font-smoothing: antialiased
  font-size 22px

.tv-overview
  margin-top 60px
  margin-left 198px
  z-index 3
  position relative
  color #fff
  font-family: 'Open Sans Semibold'
  -webkit-font-smoothing: antialiased
  font-size 12px
  line-height 22px
  max-width 78%
  //height 110px


.tv-num-episodes
  margin-top 35px
  position relative
  z-index 3
  float left
  color #fff
  font-family: 'Open Sans Bold'
  -webkit-font-smoothing: antialiased
  font-size 11px
  cursor default

.tv-genre
  margin-top 35px
  z-index 3
  position relative
  float left
  color #fff
  font-family: 'Open Sans Bold'
  -webkit-font-smoothing: antialiased
  font-size 11px
  cursor default

.tv-duration
  margin-top 35px
  position relative
  z-index 3
  margin-left 198px
  float left
  color #fff
  width auto
  height auto
  font-family: 'Open Sans Bold'
  -webkit-font-smoothing: antialiased
  font-size 11px
  cursor default
  z-index 3

.tv-dot
  margin-top 39.5px
  position relative
  z-index 3
  margin-left 15px
  margin-right 15px
  position relative
  float left
  width 3px
  height 3px
  -moz-border-radius 2px
  -webkit-border-radius 2px
  border-radius 2px
  -moz-background-clip padding
  -webkit-background-clip padding-box
  background-clip padding-box
  background-color #dbdbdd
  cursor default

.tv-rating-star
    z-index 2
    margin-right 3px
    margin-top 35px
    position relative
    float left
    width 11px
    height 11px
    opacity 1
    background-repeat no-repeat
    -webkit-backface-visibility hidden
    &.null
      background-image url('../../images/icons/StarGray.png')
    &.half
      background-image url('../../images/icons/StarHalf.png')
    &.full
      background-image url('../../images/icons/star.png')




.episode-list-text
  color #fff
  font-family "Open Sans", sans-serif
  font-size 22px
  font-weight bold
  position relative
  top 220px
  z-index 2
  left 0
  padding 40px 230px 20px
  background #17181b
  box-shadow 0 1px 3px #17181b



.season-episode-container
    background-color #17181b
    height 74%
    width 99.99%
    position fixed
    scrollable()
    padding-top: 230px
    &::-webkit-scrollbar-track
        margin-top: 230px



#tabs_season 
    width: 100%
    margin: 0
    padding: 0
    list-style: none
    font: 12px Segoe, "Segoe UI", "DejaVu Sans", "Trebuchet MS", Verdana, sans-serif
    z-index: 2
    float: left
    position: relative
    height: auto;
    top 0px

    ul 
      position: absolute
      margin: 0 0 0 60px
      list-style: none

      li 
        margin: 10px .5em 17px 0
        font-family 'Open Sans Semibold'
        font-size: 13px

    a 
      padding: 1em 1em
      text-decoration: none
      color: #707070
      font-size: 20px
      font-weight: normal
      margin: 10px 0px

    a:hover, a:hover::after, a:focus, a:focus::after 
      color: #3173E9
    
    a:focus 
      outline: 0

    a::after 
      content: ''
      position: absolute
      z-index: 1
      top: 0
      right: -.5em
      bottom: 0
      width: 1em

    #current_season a
      z-index: 3
      color: #4370BE

    #current_season a::after 
      z-index: 3


