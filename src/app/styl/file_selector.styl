.file-selector-container
    z-index 100
    height 100%
    width 100%
    position fixed
    background-color #17181b
    -webkit-user-select none
    opacity 1
    background-position 50% 50%

    .overlay-content
        height 100%
        width 100%
        position absolute
        background rgba(0, 0, 0, 0.6)
        z-index -1

    .close
        top 85px
        right 20px
        position fixed
        float right
        width 20px
        height 20px
        background-image url('../../images/icons/Close.png')
        background-size 20px
        cursor pointer
        z-index 100
        opacity 0.7
        -webkit-backface-visibility hidden
        transition all .5s

        &:hover
            opacity 1 
            transition all .5s

    .content
        margin 0 auto
        margin-top 100px
        width 66%
        height 60%
        color #fff
        font-weight 100
        font-family sans-serif
        font-size 17px
        text-align center
        scrollable()

        .title
            font-size 24px
            border-bottom 1px solid #eee

        ul

            li.file-item
                padding 5px
                border-bottom 1px solid #2d75df

                a
                    color #eee
                    cursor pointer

        
