.nav
    font-size: 0.8em

.header_icon
    font-size: 20px
    color: TextColor3 //add onhover color of NavBarActive later

ul.nav-hor > li
    float: left

.dropdown-menu
    background-color: DropDownColor
    opacity DropDownOpacity

    & > li > a
        transition: all 0.2s
        color: DropDownText2
        opacity 1

        &.active
            color: DropDownText
            background-color: DropDownColor2
            background-image: none
            border-left: 4px solid NavBarText

        &:focus,
        &:hover
            color: DropDownText
            background-color: DropDownColor2
            background-image: none
            border-left: 4px solid NavBarActive