#notification .notification
    display block
    position absolute
    top 70px
    border-radius 3px
    height auto
    min-width 300px
    -webkit-user-select none
    opacity 0.9
    right 60px
    z-index 5000
    font-size 13px
    font-weight bold
    text-align center
    line-height 27px
    padding 9px 15px
    color #fff
    border 1px solid rgba(0,0,0,.7)
    transition all .5s

    &:empty
        display none

    &:hover
        opacity 1

    &.info
        background #3498DB

    &.success
        background #27AE60

    &.warning
        background #dbb756

    &.orange
        background #f07f53

    &.error
        background #f15153

    .close
        position absolute
        top 5px
        right 5px
        opacity 0.7
        color white
    &:hover
        opacity 1

    .btn-grp
        position relative
        top 6px
        padding-bottom 6px
        margin-right auto
        margin-left auto

    .btn
        background rgba(0, 0, 0, 0.4)
        color #fff
        transition all .5s

        &:hover
            background rgba(0,0,0,0.6)

        &:active
            box-shadow: inset 0 1px 4px rgba(0,0,0,0.6)
            box-shadow: inset 0 1px 4px rgba(0,0,0,0.6)
            background rgba(0,0,0,0.7)

    .btn.chnglog
        margin-right 5px

    h1
        font-size 20px

    p
        font-weight 100
        line-height: 20px


