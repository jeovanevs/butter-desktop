.torrent-collection-container
	z-index 1
	height 100%
	width 100%
	position fixed
	background-color $BgColor1
	-webkit-user-select none
	opacity 1

	.margintop
		height 67px

	.content
		margin 0 auto
		width 80%
		height calc(100% - 100px)
		color #fff
		font-weight 100
		font-family $AlternateFont
		font-size 17px

		.notorrents-info
			width 250px
			height 250px
			border 6px dashed $TextError
			border-radius 25px
			margin 0 auto
			margin-top 10%
			text-align center

			.notorrents-icon
				font-size 140px
				color $TextError
				padding-top 20px

			.notorrents-message
				font-family $MainFontBold
				font-size 20px