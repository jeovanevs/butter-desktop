.show-list
  height 100%
  width 100%
  position fixed
  top 0
  left 0
  text-align center
  overflow-x hidden
  overflow-y overlay
  -webkit-overflow-scrolling touch
  &::-webkit-scrollbar
    width 5px
  &::-webkit-scrollbar-track
    background-color #30333c
    -webkit-border-radius 2px
    border-radius 2px
    margin-top 65px
  &::-webkit-scrollbar-thumb
    background-color #83888c
    -webkit-border-radius 2px
    border-radius 2px
    &:hover
      background-color #93989c
  .shows
    padding-top 65px
    -webkit-user-select none
    text-align left
    display inline-block
  .error
    font-size 1.5em
    text-align center
    margin-top 180px
    color #727272
    font-weight bold
  .spinner
    position absolute
    width 100%
    height 100%
    background #000 center center no-repeat
    opacity 0.5
    -ms-filter "progid:DXImageTransform.Microsoft.Alpha(Opacity=50)"
    filter alpha(opacity=50)
    .spinner-image
      margin 180px auto 0px
      background url("../images/spinner.svg") no-repeat 0 0
      -webkit-background-size cover
      -moz-background-size cover
      background-size cover
      display block
      height 45px
      -webkit-animation 1.05s spin infinite linear
      width 45px

.show-list::-webkit-resizer,
.show-list::-webkit-scrollbar-corner,
.show-list::-webkit-scrollbar-button,
.show-list::-webkit-scrollbar-track-piece
  display none

