.switch
  background transparent
  border-radius 32px
  display block
  height 12px
  position absolute
  margin-left 550px
  top 312px
  width 25px
  border 2px solid #FFF
  cursor pointer
  z-index 2
  label
    font-family "Open Sans", sans-serif
    font-size 11px
    color #fff
    font-weight bold
    transition color 0.2s ease
    transition color 0.2s ease
    width 20px
    cursor pointer
    &:nth-of-type(1)
      left -38px
      position absolute
      text-align right
    &:nth-of-type(2)
      position absolute
      right -30px
      text-align left
  input
    height 7px
    left -2px
    opacity 0
    position absolute
    top -4px
    width 26px
    z-index 2
    cursor pointer
    &:checked
      z-index 0
      & ~ label
        &:nth-of-type(1)
          color #286dc4
        &:nth-of-type(2)
          color #FFF
      & ~ .toggle
        left 0px
    & ~ :checked
      & ~ label
        &:nth-of-type(1)
          color #FFF
        &:nth-of-type(2)
          color #286dc4
      & ~ .toggle
        left 11px

.toggle
  transition left 0.2s ease
  transition left 0.2s ease
  background #286dc4
  border-radius 50%
  height 10px
  left -0px
  position absolute
  top -1px
  width 10px
  z-index 1

